
<div id="grey">
	    <div class="container">
			<% @posts.each do |f| %>
			<div class="row">
				<div class="col-lg-8 col-lg-offset-2">
					<p><img src="assets/user.jpg" width="50px" height="50px"> <ba>Nhat Nguyen</ba></p>
					<p><bd><%=f.created_at%></bd></p>
					<h4><%=f.title%></h4>
					<p class="maxlength"><%=f.body%></p><%= link_to 'Continue Reading...', post_path(f) ,class:'linkt' %></p>
					<%=link_to "Edit",edit_post_path(f)%> | 
					<%=link_to "Delete", post_path(f),method: 'delete',data:{confirm:"You're requesting delete this post, are you sure?"} %></p>
				</div>

			</div><!-- /row -->
			<% end %>
	    </div> <!-- /container -->
</div><!-- /grey -->

